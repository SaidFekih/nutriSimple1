<script type="text/javascript">


    const etaps = Array.from(document.querySelectorAll('div .tab-pane'));
    const nextBtn = document.querySelectorAll('div .suivant');
    const prevBtn = document.querySelectorAll('div .prevBtn');
    const card = document.querySelectorAll('tab-content');
    console.log(card);

    nextBtn.forEach(button => {
        button.addEventListener('click', (e) => {
            changeEtap('next');
        })
    })
    prevBtn.forEach(button => {
        button.addEventListener('click', () => {
            changeEtap('prev');
        })
    })

    function changeEtap(btn) {
        let index = 0;
        const active = document.querySelector('div .tab-pane.active');
        index = etaps.indexOf(active);
        etaps[index].classList.remove('active');
        if (btn === 'next') {
            index++
        }
        else if (btn === 'prev') {
            index--
        }
        etaps[index].classList.add('active');
        console.log(index)
    }




